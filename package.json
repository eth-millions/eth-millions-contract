{
  "name": "eth-millions-contract",
  "version": "1.0.0",
  "description": "Decentralized EuroMillions lottery on Ethereum with TypeScript support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:ts": "hardhat test test/**/*.ts",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network ethereum",
    "interact": "hardhat run scripts/interact.ts",
    "simulate": "hardhat run scripts/simulate-draw.ts",
    "monitor": "hardhat run scripts/monitor.ts",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:mainnet": "hardhat verify --network ethereum",
    "node": "hardhat node",
    "clean": "hardhat clean && rimraf dist",
    "size": "hardhat size-contracts",
    "typechain": "hardhat typechain",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:ts": "eslint '**/*.ts'",
    "lint:fix": "eslint '**/*.ts' --fix",
    "format": "prettier --write '**/*.{js,ts,sol,json,md}'",
    "format:check": "prettier --check '**/*.{js,ts,sol,json,md}'",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.6.1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/contracts": "^4.9.0",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^7.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "chai": "^4.3.0",
    "dotenv": "^16.3.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "ethers": "^5.7.0",
    "hardhat": "^2.17.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.0",
    "prettier": "^2.8.0",
    "prettier-plugin-solidity": "^1.1.0",
    "rimraf": "^5.0.0",
    "solhint": "^3.6.0",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.9.0",
    "typechain": "^8.3.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "typescript",
    "lottery",
    "euromillions",
    "chainlink",
    "vrf",
    "defi"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
